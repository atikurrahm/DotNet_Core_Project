@model WorkerEditModel
<form id="f" name="f" data-db-type="worker" data-db-action="edit" data-controller-action="EditWorker">
    <div class="row">
        <div class="col-9">
            <input type="hidden" asp-for="WorkerId" />
            <div class="form-group row mb-1">
                <label asp-for="WorkerName" class="col-form-label col-3"></label>
                <div class="col-9">
                    <input asp-for="WorkerName" class="form-control" />
                    <span asp-validation-for="WorkerName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Phone" class="control-label col-3"></label>
                <div class="col-9">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="StartDate" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="StartDate" class="form-control form-control-sm date">
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
        <label asp-for="EndDate" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input  type="text" asp-for="EndDate" class="form-control form-control-sm date">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
            <div class="form-group row mb-1">
                <label asp-for="Picture" class="control-label col-3"></label>
                <div class="col-9">
                    <input type="file" asp-for="Picture" class="form-control col-2" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Payrate" class="control-label col-2"></label>
                <div class="col-10">
                    <input asp-for="Payrate" class="form-control" />
                    <span asp-validation-for="Payrate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="TotalWorkHour" class="control-label col-2"></label>
                <div class="col-10">
                    <input asp-for="TotalWorkHour" class="form-control" />
                    <span asp-validation-for="TotalWorkHour" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="TotalPayment" class="control-label col-2"></label>
                <div class="col-10">
                    <input asp-for="TotalPayment" class="form-control" />
                    <span asp-validation-for="TotalPayment" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-3">
            <img src="/Pictures/@ViewData["CurrentPic"]" style="width:150px" class="img-thumbnail" />
        </div>
    </div>
</form>
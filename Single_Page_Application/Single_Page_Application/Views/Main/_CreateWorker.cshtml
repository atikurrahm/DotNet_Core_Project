@model WorkerInputModel
<form id="f" name="f" data-db-type="worker" data-db-action="insert" data-controller-action="CreateWorker">
    <div class="form-group row mb-1">
        <label asp-for="WorkerName" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="WorkerName" class="form-control" />
            <span asp-validation-for="WorkerName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Phone" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="StartDate" class="col-form-label col-2"></label>
        <div class="col-10">
            <input type="text" asp-for="StartDate" class="form-control form-control-sm date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="EndDate" class="control-label col-2"></label>
        <div class="col-10">
            <input type="text" asp-for="EndDate" class="form-control form-control-sm date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Picture" class="control-label col-2"></label>
        <div class="col-10">
            <input type="file" asp-for="Picture" class="form-control col-2" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Payrate" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="Payrate" class="form-control" />
            <span asp-validation-for="Payrate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="TotalWorkHour" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="TotalWorkHour" class="form-control" />
            <span asp-validation-for="TotalWorkHour" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="TotalPayment" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="TotalPayment" class="form-control" />
            <span asp-validation-for="TotalPayment" class="text-danger"></span>
        </div>
    </div>
</form>

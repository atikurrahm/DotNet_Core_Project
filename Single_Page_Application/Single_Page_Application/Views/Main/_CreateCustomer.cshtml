@model Customer

@{
    ViewData["Title"] = "Create";
}

<form id="f" name="f" data-db-type="customer" data-db-action="insert" data-controller-action="CreateCustomer">
    <div class="form-group row mb-1">
        <label asp-for="CustomerName" class="col-form-label col-3"></label>
        <div class="col-9">
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Email" class="control-label col-3"></label>
        <div class="col-9">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="CustomerAddress" class="control-label col-3"></label>
        <div class="col-9">
            <input asp-for="CustomerAddress" class="form-control col-2" />
            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="WorkDescription" class="control-label col-3"></label>
        <div class="col-9">
            <input asp-for="WorkDescription" class="form-control col-2" />
            <span asp-validation-for="WorkDescription" class="text-danger"></span>
        </div>
    </div>
</form>






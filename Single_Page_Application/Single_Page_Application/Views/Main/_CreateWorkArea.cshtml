@model WorkArea


<form id="f" name="f" data-db-type="workarea" data-db-action="insert" data-controller-action="CreateWorkArea">
    
    <div class="form-group row mb-1">
        <label asp-for="CustomerId" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <select asp-for="CustomerId" class="form-select form-select-sm" asp-items="@(new SelectList(ViewData["Customers"] as IEnumerable<Customer>, "CustomerId", "CustomerName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row mb-1">
        <label asp-for="WorkAreaName" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input type="text" asp-for="WorkAreaName" class="form-control form-control-sm ">
            <span asp-validation-for="WorkAreaName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Skill" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input type="text" asp-for="Skill" class="form-control form-control-sm " >
            
            <span asp-validation-for="Skill" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="IsRunning" class="control-label col-2"></label>
        <div class="col-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsRunning" checked>
            </div>
            <span asp-validation-for="IsRunning" class="text-danger"></span>
        </div>
    </div>
    <div id="works">
        <div class="d-flex justify-content-between mb-1">
            <h3>Works</h3>
            <div><button type="button" class="btn btn-primary btn-sm" id="addWorkForm"><i class="bi bi-plus"></i></button></div>
        </div> 
        @await Html.PartialAsync("_CreateWorkItem", 
        null,
        new ViewDataDictionary(this.ViewData)
         )
    </div>
</form>

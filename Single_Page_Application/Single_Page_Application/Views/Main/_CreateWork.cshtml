@model Work
<form id="f" name="f" data-db-type="work" data-db-action="insert" data-controller-action="CreateWork">
    <input type="hidden" asp-for="WorkAreaId" value="@ViewData["WorkAreaId"]" />
    <div class="form-group row mb-1">
        <label asp-for="WorkAreaId" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            @ViewData["WorkAreaId"]
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="WorkerId" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <select asp-for="WorkerId" class="form-select form-select-sm added" asp-items="@(new SelectList(ViewData["Workers"] as IEnumerable<Worker>, "WorkerId", "WorkerName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="WorkerId" class="text-danger"></span>
        </div>
        <label asp-for="TotalWorker" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-3">
            <input type="number" min="1" asp-for="TotalWorker" class="form-control form-control-sm added">
            <span asp-validation-for="TotalWorker" class="text-danger"></span>
        </div>
        <div class="col-1">
            <button type="button" class="btn btn-sm deloi-insert"><i class="bi bi-trash"></i></button>
        </div>
    </div>
</form>

